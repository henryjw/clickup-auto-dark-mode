{
  "manifest_version": 3,
  "version": "1.0.0",

  "name": "ClickUp Auto Dark Mode",
  "description": "Automatically turns dark mode on or off based on the system's theme",
  "author": "Henry Williams<henry@hwilliams.tech>",
  "content_scripts": [
    {
      "matches": ["https://*.clickup.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
